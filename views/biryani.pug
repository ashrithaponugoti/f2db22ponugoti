extends layout

block content
  h1= title
  - let biryani=results
  - let createb=`dispatch(\"/biryani/create\")`
  button.btn(class="btn-secondary",onclick=createb) Create
  div(class="container-fluid")
  div(class="row m-1")
   each b in biryani
    - let destination = `dispatch(\"/biryani/update?id=${b._id}\")`
    - let detailb=`dispatch(\"/biryani/detail?id=${b._id}\")`
    - let deleteb=`dispatch(\"/biryani/delete?id=${b._id}\")` 
    div(class="row-sm-2" class="m-1") Item #{b.bir_quantity}, #{b.bir_cost}, #{b.bir_ing}
     button.btn( class="btn-info ml-1", onclick= destination) Update
     button.btn( class="btn-primary ml-1", onclick= detailb) View 
     button.btn( class="btn-danger ml-1", onclick= deleteb) Delete
  script.
   function dispatch(path){
    window.location.href=path
   } 